<div class="row mb-2">
    <div class="col-md">
        <label>Text to Be Encrypted</label>
        <textarea class="form-control" id="unencrypted-text" rows="8"></textarea>
    </div>
</div>

<div class="row mb-5">
    <div class="col-md">
        <button class="btn btn-primary" id="encrypt-btn">Encrypt Text</button>
    </div>
</div>

<div class="row mb-2">
    <div class="col-md">
        <label>Encrypted Text</label>
        <textarea class="form-control" id="encrypted-text" rows="8" disabled></textarea>
    </div>
</div>

<div class="row mb-5">
    <div class="col-md">
        <button class="btn btn-primary" id="copy-btn">Copy Text</button>
        <small class="text-success ms-3 hide" id="success-msg">Copy Successful</small>
    </div>
</div>


@section Scripts 
{
    <script src="~/js/Pages/EncryptPage.js" type="module"></script>
}